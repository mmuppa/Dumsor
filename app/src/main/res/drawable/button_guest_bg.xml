<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffa8a8a8" />
            <stroke
                android:width="1dp"
                android:color="#ffb2b2b2" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffa8a8a8"
                android:endColor="#ffb2b2b2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffa8a8a8" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>